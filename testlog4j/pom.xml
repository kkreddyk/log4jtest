    <executions>
      <execution>
        <phase>package</phase>
        <goals>
          <goal>single</goal>
        </goals>
      </execution>
    </executions>
  </plugin>


   </plugins>
   <sourceDirectory>src/main/scala</sourceDirectory>
   
  </build>
</project>
